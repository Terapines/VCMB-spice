{
    "name": "spice",
    "fileTypes": [
        "net",
        "lib"
    ],
    "patterns": [
        {
            "include": "#keyword"
        },
        {
            "include": "#macro"
        },
        {
            "include": "#command"
        },
        {
            "include": "#comment"
        }
    ],
    "repository": {
        "keyword": {
            "patterns":[
                {"include": "#ngspiceKeyword"},
                {"include": "#adsKeyword"}
            ]
        },
        "ngspiceKeyword": {
            "match": "^\\s*\\.(?i)(model|title|param|subckt|ends|end)",
            "name": "keyword.control.ngspice"
        },
        "adsKeyword": {
            "match": "^\\s*(?i)(model|parameters|define|end|options)",
            "name": "keyword.control.ads"
        },
        "command": {
            "patterns": [
                {"include": "#ngspiceCommand"},
                {"include": "#adsCommand"}
            ]
        },
        "ngspiceCommand": {
            "match": "^\\s*\\.?(?i)(tran|load|to|tf|temp|step|connect|statistics|simulator|set|sens|section|save|process|probe|print|plot|option|global|op|noise|measure|meas|lib|let|ic|from|four|endsection|endif|endl|endc|disto|control|alter|dc|ac|hdl)",
            "captures": {
                "0": {
                    "name": "keyword.control.directive.include.cpp"
                }
            }
        },
        "comment": {
            "patterns": [
                {"include": "#inLineComment"},
                {"include": "#singleLineComment"}
            ]
        },
        "inLineComment": {
            "match": ".*?([$;].*(?=[\\r\\n]))",
            "captures": {
                "1": {
                    "name": "comment.line.double-slash.js"
                }
            }
        },
        "singleLineComment": {
            "name": "comment.line.double-slash.js",
            "match": "\\s*[\\*;].*(?=[\\r\\n])"
        }
    },
    "scopeName": "source.vcmb"
}